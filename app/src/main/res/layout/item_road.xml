<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="28dp">

    <ImageView
        android:id="@+id/item_rode_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_rode_circle" />

    <TextView
        android:id="@+id/text_road_item"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="23dp"
        android:inputType="textMultiLine|textNoSuggestions"
        android:text="OOP"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_rode_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_rode_circle"
        app:layout_constraintTop_toTopOf="@+id/item_rode_circle" />

    <ImageView
        android:id="@+id/rode_rectangle"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_rode_circle"
        app:layout_constraintStart_toStartOf="@+id/item_rode_circle"
        app:layout_constraintTop_toBottomOf="@+id/item_rode_circle"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_rode_rectangle" />
</androidx.constraintlayout.widget.ConstraintLayout>