<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/rounded_view"
    android:backgroundTint="@color/white_darker">

    <TextView
        android:id="@+id/item_feedback_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Omar Essam"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002" />

    <TextView
        android:id="@+id/item_feedback_review"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5.9dp"
        android:inputType="textMultiLine"
        android:paddingRight="25dp"
        android:text="omar essam el din aabdel fatah ibarhm saad masd asd "
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_feedback_name"
        app:layout_constraintTop_toBottomOf="@+id/item_feedback_name"
        app:layout_constraintVertical_bias="0.26999998" />

    <TextView
        android:id="@+id/item_feedback_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_feedback_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toEndOf="@+id/item_feedback_name"
        app:layout_constraintTop_toTopOf="@+id/item_feedback_name" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_feedback_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toEndOf="@+id/item_feedback_rate"
        app:layout_constraintTop_toTopOf="@+id/item_feedback_rate"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rate_star" />
</androidx.constraintlayout.widget.ConstraintLayout>