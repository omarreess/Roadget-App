<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.CourseFeedbacksUI">

<FrameLayout
    android:id="@+id/course_feedback_toolbar"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/yellow"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/course_feedback_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="45dp"
        android:text="Course Reviews "
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />


</FrameLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/course_feedback_list"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:scrollbars="vertical"
    android:layout_marginTop="15dp"

    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/course_feedback_toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>