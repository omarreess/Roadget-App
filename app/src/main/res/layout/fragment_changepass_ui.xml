<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.changepassUI">

    <TextView
        android:id="@+id/changepass_text"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:paddingLeft="5dp"
        android:text="New Password"
        android:inputType="textCapSentences"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changepass_toolbar"
        app:layout_constraintVertical_bias="0.100000024" />

    <FrameLayout
        android:id="@+id/changepass_toolbar"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/yellow"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/changepass_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="45dp"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />


    </FrameLayout>

    <EditText
        android:id="@+id/changepass_pass"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginRight="60dp"
         android:background="@drawable/rounded_view"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/login_lock"
        android:drawablePadding="6dp"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingStart="6dp"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/changepass_text"
        app:layout_constraintTop_toBottomOf="@+id/changepass_text"
        app:layout_constraintVertical_bias="0.01999" />

    <EditText
        android:id="@+id/changepass_repass"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/rounded_view"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/login_lock"
        android:drawablePadding="6dp"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingStart="6dp"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/changepass_text2"
        app:layout_constraintTop_toBottomOf="@+id/changepass_text2"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/changepass_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Confirm New Password"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/changepass_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/changepass_pass"
        app:layout_constraintTop_toBottomOf="@+id/changepass_pass"
        app:layout_constraintVertical_bias="0.060000002" />

    <Button
        android:id="@+id/changepass_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_view"
        android:backgroundTint="@color/blue"
        android:text="Change"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changepass_repass"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>